/* components/cate/tabs.wxss */
.tabs{
  height:95rpx;
}
.tab-h {
  height: 95rpx;
  width: 100%;
   box-sizing: border-box;
   overflow: hidden;
   line-height: 80rpx;
   background: #F7F7F7;
    font-size: 40rpx; 
    white-space: nowrap;
    position: fixed;top: 0; left: 0; 
    z-index: 99;
    display: flex;
  }
  
.tab-h .tab-item {
  line-height: 95rpx;
  text-align: center;
 padding: 0 40rpx;
 color:#293a46;
}
.tab-item.active{
  color: #4675F9;
  position: relative;
  border-bottom: 4rpx solid #008CD6;
}
