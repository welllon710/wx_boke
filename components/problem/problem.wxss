
.problem_item{
  padding: 0 20rpx;
  height: 100%;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 30rpx #5B5B5B;
  margin: 20rpx 0;
  background-color: #f6f8fa;
}
.title{
  font-size: 30rpx;
  color: #5B5B5B;
}
.answer{
  padding: 0 20rpx;
}
.content_box{
  padding: 0 20rpx;
}
.content{
  text-overflow: ellipsis;
  word-wrap: break-word;
}
.select{
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  position: relative;
  color: #5B5B5B;
}

.select::after{
  position: absolute;
  right:10rpx ;
  top: 14rpx;
      content: '';
      border-top: 23rpx solid transparent;
      border-bottom: 23rpx solid transparent;
      border-left: 35rpx solid #5B5B5B;
}
.active{
  border: 2rpx solid #5B5B5B;
}
.active::after{
  position: absolute;
  right:10rpx;
  top: 17rpx;
  transform-origin: center center;
      content: '';
      border-left: 23rpx solid transparent;
      border-right: 23rpx solid transparent;
      border-top: 35rpx solid #5B5B5B;
}