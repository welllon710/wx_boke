/* pages/home/home.wxss */
.user_info_group{
  height: 45vh;
  overflow: hidden;
  background-color: pink;
  position: relative;
}
.user_img_wrap{
  position: relative;
}
.user_img_wrap .user_bg{
  height: 46vh;
  filter:blur(10rpx) ;
}
.user_img_wrap .user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
 text-align: center;
}
.user_info .user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info .user_name{
  color: #fff;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.user_btn{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
}